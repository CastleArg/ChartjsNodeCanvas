{
  "name": "chartjs-node-canvas",
  "version": "2.4.0",
  "description": "A node renderer for Chart.js using canvas.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "scripts": {
    "prebuild": "check-node-version --package",
    "build": "tsc",
    "clean": "del dist -d",
    "test": "npm run-script _test-unit && npm run-script _test-e2e",
    "_test-unit": "mocha dist/**/*.spec.js --exclude dist/**/*.e2e.spec.js",
    "_test-e2e": "mocha dist/**/*.e2e.spec.js",
    "debug-test": "node --inspect-brk=33295 --nolazy node_modules/mocha/bin/_mocha dist/**/*.spec.js",
    "prewatch-build": "npm run-script prebuild && npm run-script clean",
    "watch-build": "tsc --watch",
    "watch-test": "mocha --watch dist/**/*.spec.js",
    "build-and-release": "npm run-script build && npm run-script _docs && npm run-script _release",
    "dts-gen": "dts-gen -m canvas -f types/canvas.d.ts",
    "_release": "npm shrinkwrap && release-it",
    "_docs": "jsdoc2md dist/index.js > API.md"
  },
  "bugs": {
    "url": "https://github.com/SeanSobey/ChartjsNodeCanvas/issues",
    "email": "sean.m.sobey@gmail.com"
  },
  "author": {
    "name": "Sean Sobey",
    "email": "sean.m.sobey@gmail.com"
  },
  "homepage": "https://github.com/SeanSobey/ChartjsNodeCanvas",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeanSobey/ChartjsNodeCanvas.git"
  },
  "readme": "README.md",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.4.1"
  },
  "peerDependencies": {
    "chart.js": "^2.7.3"
  },
  "devDependencies": {
    "@types/chart.js": "^2.7.51",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "@types/node-memwatch": "^1.0.0",
    "@types/pixelmatch": "^5.0.0",
    "@types/pngjs": "^3.3.2",
    "chart.js": "^2.8.0",
    "chartjs-plugin-annotation": "^0.5.7",
    "chartjs-plugin-datalabels": "^0.6.0",
    "check-node-version": "^4.0.1",
    "del-cli": "^2.0.0",
    "dts-gen": "^0.5.8",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^6.1.3",
    "node-memwatch": "^1.0.1",
    "pixelmatch": "^5.0.2",
    "pngjs": "^3.4.0",
    "release-it": "^10.4.2",
    "source-map-support": "^0.5.12",
    "tslint": "^5.15.0",
    "tslint-divid": "^1.3.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.4.3"
  }
}
